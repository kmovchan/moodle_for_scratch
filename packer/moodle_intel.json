{
  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY_ID` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami_filter": {
                "filters": {
                      "virtualization-type": "hvm",
                      "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
                      "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "moodle-server {{timestamp}}",
    "associate_public_ip_address": true
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "/Users/kmovchan/Downloads/aws-test.pub",
      "destination": "/tmp/aws-test.pub"
 },
     {
       "type": "ansible",
       "command": "ansible-playbook",
       "playbook_file": "./ansible_moodle/playbook.yml",

       "ansible_env_vars": [
           "ANSIBLE_CONFIG=./ansible_moodle/ansible.cfg",
           "ANSIBLE_ROLES_PATH=./ansible_moodle/roles"
       ]
    }
  ]
}
